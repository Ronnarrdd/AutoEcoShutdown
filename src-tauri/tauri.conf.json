{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../public",
    "distDir": "../public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "AutoEcoShutdown",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": false
      },
      "window": {
        "all": false,
        "center": true,
        "setAlwaysOnTop": true,
        "setFocus": true,
        "show": true,
        "startDragging": true
      }
    },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.eteignageauto.app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../public/assets/*"],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Application d'extinction automatique",
    "longDescription": "Application d'extinction automatique avec tableau de bord écologique",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Éteignage Automatique",
        "width": 1200,
        "height": 800,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true
      }
    ]
  }
}

